 <div class="container">
   <div class="row">
     <div class="col-md-3">

     <%= render 'users/userinfo', user: @user %>

     <%= render 'users/newbook', new_book: @new_book %>

     </div>

      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td>
                <%= attachment_image_tag user, :profile_image, size: "50x50", format:'jpeg', fallback:"no_image.jpg" %>              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to "Show", user_path(user) %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>