  <div class="container">
   <div class="row">
     <div class="col-md-3">

      <h2>User info</h2>
      <img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg">
      <table class="table">
        <tbody>
          <tr>
        	  <th>name</th>
        	  <th><%= @user.name %></th>
          </tr>
          <tr>
        	  <th>introduction</th>
        	  <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <span>
          <%= link_to "設定", edit_user_path, class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </span>
      </div>


        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, local:true do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <span>
              <%= f.submit 'Create Book' %>
            </span>
          </div>
        <% end %>

    </div>


      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
            <thead>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </thead>
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td>
                  <%= @user.profile_image_id %>
                </td>
                <td>
                  <%= link_to book.title , edit_book_path(book) %>
                </td>
                <td>
                  <%= book.body %>
                </td>
              </tr>
              <% end %>
            </tbody>
        </table>
      </div>

    </div>
  </div>