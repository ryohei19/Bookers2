  <div class="container">
   <div class="row">
     <div class="col-md-3">

     <%= render 'users/userinfo', user: @user %>

     <%= render 'users/newbook', new_book: @new_book %>

     </div>


      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
            <thead>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </thead>
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td>
                  <%= @user.profile_image_id %>
                </td>
                <td>
                  <%= link_to book.title , edit_book_path(book) %>
                </td>
                <td>
                  <%= book.body %>
                </td>
              </tr>
              <% end %>
            </tbody>
        </table>
      </div>

    </div>
  </div>