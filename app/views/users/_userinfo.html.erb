
      <h2>User info</h2>
       <%= attachment_image_tag user, :profile_image, size: "70x70", format: 'jpeg',fallback: "no_image.jpg" %>.
       <table class = "table">
        <tbody>
          <tr></tr>
          <tr>
        	  <th>name</th>
        	  <th><%= user.name %></th>
          </tr>
          <tr>
        	  <th>introduction</th>
        	  <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <% if user.id == current_user.id %>
        <a class = "btn btn-outline-secondary btn-block fas fa-user-cog" href = "/users/:id/edit" ></a>
        <% end %>
      </div>


