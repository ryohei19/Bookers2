  <div class="container">
   <div class="row">
     <div class="col-md-3">

     <%= render 'users/userinfo', user: @user %>

     <%= render 'users/newbook', new_book: @new_book %>

     </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <img src=<%= @user.profile_image_id %> class = "attachment user profile_image fallback" >
              </td>
              <td>
                <%= link_to book.title , book_path(book) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
